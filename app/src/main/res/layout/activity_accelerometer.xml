<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.logan20.comp3275a2.AccelerometerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Accelerometer Readings"
        android:id="@+id/idAccelHead"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/idAccelX"
        android:layout_below="@+id/idAccelHead"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:hint="Holds the accelerometer&apos;s x value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/idAccelY"
        android:layout_below="@+id/idAccelX"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:hint="Holds the accelerometer&apos;s y value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/idAccelZ"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Holds the accelerometer&apos;s z value" />
</RelativeLayout>
